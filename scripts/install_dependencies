#!/bin/bash
yum install -y httpd

curl --silent --location https://rpm.nodesource.com/setup_6.x | bash -
yum -y install nodejs

source /home/ec2-user/.bash_profile

cd /var/www/html

npm install

source /home/ec2-user/.bash_profile

npm install -g @angular/cli

source /home/ec2-user/.bash_profile

ng build --prod --aot=false
